--CREAMOS EL PROCEDIMIENTO ALMACENADO

CREATE PROCEDURE insertar_vehiculo (
    IN p_id_vehiculo VARCHAR(10),
    IN p_id_cliente VARCHAR(10),
    IN p_id_transportista VARCHAR(10),
    IN p_placa INTEGER,
    IN p_capacidad_persona varchar(20),
	IN p_distancia_recorrida VARCHAR(10),
	IN p_estado VARCHAR(30),
	IN p_cantidad_viaje INTEGER
)
LANGUAGE plpgsql
AS $$
BEGIN
    INSERT INTO VEHICULO (id_vehiculo,id_cliente,id_transportista,placa,capacidad_persona,distancia_recorrida,estado,cantidad_viaje)
    VALUES (p_id_vehiculo,p_id_cliente,p_id_transportista,p_placa,p_capacidad_persona,p_distancia_recorrida,p_estado,p_cantidad_viaje);

    IF p_estado = 'ocupado' THEN
        UPDATE VEHICULO
        SET p_cantidad_viaje = p_cantidad_viaje + 1
        WHERE id_vehiculo = id_vehiculo;

        UPDATE VEHICULO
        SET p_cantidad_viaje = p_cantidad_viaje + 1
        WHERE id_vehiculo = id_vehiculo;
    ELSIF p_estado = 'disponible' THEN
        UPDATE VEHICULO
        SET p_cantidad_viaje = p_cantidad_viaje + 1
        WHERE id_vehiculo = id_vehiculo;
    END IF;

EXCEPTION
    WHEN OTHERS THEN 
        ROLLBACK;
        RAISE EXCEPTION 'No se pudo ejecutar la transacción';
END;
$$;


--Y HACEMOS UN SELECT PARA QUE NOS MUETRE POR PANTALLA CADA TABLA
select * from CLIENTE;
select * from TRANSPORTISTA;
select * from VEHICULO;
